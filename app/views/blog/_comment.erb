<li class="clearfix" id="<%= comment.id %>">
  <div class="user_img"><%= image_tag comment.account.gravatar_url %></div>
  <div class="cot_con">
 		<div class="info">
      <span class="user_name"><%= comment.account.name %></span>
      <span class="time"><%= time_ago_in_words(comment.created_at) %></span>
      <% if account_admin? %>
      <span><%= link_to "删除", url(:admin, :comment, :id => comment.id), :method => :delete, :remote => true %></span>
      <% end %>
    </div>
    <p><%= comment.md_content.html_safe %></p>
  </div>
</li>
