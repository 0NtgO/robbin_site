<h2><span><%= blog.comments_count %></span>Comment</h2>
<ul>
  <% if blog.comments_count > 0 %>
  <% blog.comments.reverse.each do |comment| %>
  <li class="clearfix" id="<%= comment.id %>">
    <div class="user_img"><img src="/skins/data/200.PNG"></div>
    <div class="cot_con">
   		<div class="info">
        <span class="user_name"><%= comment.account.name %></span>
        <span class="time"><%= time_ago_in_words(comment.created_at) %></span>
        <% if account_admin? %>
        <span><%= link_to "删除", url(:blog, :comment, :id => blog.id, :comment_id => comment.id), :method => :delete, :remote => true %></span>
        <% end %>
      </div>
      <p><%=h comment.content %></p>
    </div>
  </li>
  <% end %>
  <% end %>
</ul>