<% @nav = 'tag' %>
<% @title = params[:name] + "分类文章" %>
<% @description = params[:name] + "分类下所有文章列表" %>

<div class="left">
	<h3>Tag: <%= params[:name] %></h3>
  <%= partial 'blog/blog', :collection => @blogs %>
  <div>
    <%= (will_paginate @blogs, :previous_label => '前一页', :next_label => '下一页').to_s.html_safe %>
  </div>
</div><!-- left content -->

<div class="right">
  <%= partial 'blog/right' %>
</div><!-- right content -->
